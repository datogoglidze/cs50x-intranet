root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{py,java,r,R,html}]
indent_style = space
indent_size = 4

[*.{js, json, y{a,}ml,cwl}]
indent_style = space
indent_size = 2

[*.{md,Rmd,rst}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.{html, css}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 4
